# RAG Integration Configuration
# =====================================

# External RAG Service Configuration
# Set this to use the external RAG system at /home/reggie/vscode_folder/RAG
RAG_ENDPOINT=http://localhost:8001

# Optional: API key for the RAG service
# RAG_API_KEY=your-api-key-here

# Enhanced Retrieval Settings
# =====================================

# Cache configuration (seconds)
RAG_CACHE_TTL=300
RAG_CACHE_SIZE=1000

# Default retrieval parameters
RAG_DEFAULT_TOP_K=5
RAG_DEFAULT_THRESHOLD=0.3
RAG_ENABLE_RERANK=true

# Web search enhancement
RAG_ENABLE_WEB_SEARCH=false
RAG_WEB_SEARCH_TIMEOUT=5.0

# Fallback settings
RAG_FALLBACK_TO_LOCAL=true

# Debug and Monitoring
# =====================================

# Enable debug logging for RAG integration
RAG_DEBUG=false

# Enable performance tracing
RAG_TRACE_PERFORMANCE=true

# Test mode settings
# =====================================

# Use external RAG service first (if available)
# Set to 'false' to use local retrieval first
USE_RAG_FIRST=true

# Simulate retrieval delays for testing (milliseconds)
# SIMULATE_RETRIEVAL_DELAY_MS=0

# Disable external RAG service and use local only
# DISABLE_RAG_SERVICE=false

# Local Retrieval Only Mode
# =====================================
# If DISABLE_RAG_SERVICE=true, only local retrieval will be used
# This mode uses the simple in-memory vector store

# Logging and Monitoring
# =====================================

# Log retrieval details
LOG_RETRIEVAL_DETAILS=true

# Log performance metrics
LOG_PERFORMANCE_METRICS=true

# Store failed queries for analysis
STORE_FAILED_QUERIES=true