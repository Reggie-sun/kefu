# Base bot config (DeepSeek via OpenAI-compatible API)
channel_type=wechatmp
model=deepseek-chat
bot_type=chatGPT
open_ai_api_key=sk-xxx
open_ai_api_base=https://api.deepseek.com/v1
smart_gateway_timeout=60
EXTERNAL_RAG_ONLY=true

# WeChat MP
wechatmp_token=mywechatbottoken
wechatmp_app_id=wx1234567890abcdef
wechatmp_app_secret=your_app_secret
wechatmp_aes_key=your_encoding_aes_key
wechatmp_port=8080

# Smart gateway (bot -> gateway)
smart_gateway_base_url=http://gateway:8500
smart_gateway_tools_allowed=lookup_order,check_logistics,product_info
smart_gateway_rag_top_k=3
smart_gateway_rag_threshold=0.3

# Customer service RAG upstream (if used)
customer_service_api_base_url=https://api.srj666.com
customer_service_api_token=your_token
customer_service_api_timeout=8

# Domains / certificates
WX_DOMAIN=wx.example.com
GATEWAY_DOMAIN=gateway.example.com
DASH_DOMAIN=dash.example.com
CADDY_ACME_EMAIL=you@example.com

# Cloudflared tunnel
CLOUDFLARED_TUNNEL_ID=your_tunnel_id
# Place tunnel credentials JSON at deploy/cloudflared/credentials/<tunnel_id>.json
# Optional overrides:
# CLOUDFLARED_UPSTREAM_URL=https://caddy:443
# CLOUDFLARED_PROTOCOL=quic

